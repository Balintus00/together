<resources>
    <!-- TODO Wireframe's actual colors should be used -->
    <!-- TODO after the correct theme will be used, most of the styles might need to be refactored -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryHighlightColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/primaryHighlightColor</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="Title">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="MediumTitle" parent="Title">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="SmallTitle" parent="MediumTitle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SmallLink">
        <item name="android:textColor">@color/primaryHighlightColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EnormousNormalAttribute" parent="Title">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HighlightedEnormousNormalAttribute" parent="EnormousNormalAttribute">
        <item name="android:textColor">@color/primaryHighlightColor</item>
    </style>

    <style name="EnormousNormalSecondaryAttribute" parent="EnormousNormalAttribute">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="BigNormalAttribute" parent="EnormousNormalAttribute">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HighlightedBigNormalAttribute" parent="BigNormalAttribute">
        <item name="android:textColor">@color/primaryHighlightColor</item>
    </style>

    <style name="BigBoldAttribute" parent="BigNormalAttribute">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumAttribute" parent="BigNormalAttribute">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MediumSecondaryAttribute" parent="MediumAttribute">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="HighlightedMediumAttribute" parent="MediumAttribute">
        <item name="android:textColor">@color/primaryHighlightColor</item>
    </style>

    <style name="BoldHighlightedMediumAttribute" parent="HighlightedMediumAttribute">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumBoldAttribute" parent="MediumAttribute">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle">
        <item name="android:textColor">#484848</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="AttributeName">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="AttributeData">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="SupportInformationText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="OrganiserOptionItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="ImportantButton" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/lightBackgroundColor</item>
        <item name="background">@color/lightBackgroundColor</item>
        <item name="strokeColor">@color/color_states_materialbutton</item>
        <item name="android:textColor">@color/color_states_materialbutton</item>
        <item name="strokeWidth">3sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="ImportantButtonRoundEdge" parent="ImportantButton">
        <item name="cornerRadius">25dp</item>
        <item name="backgroundTint">@color/color_states_primary_color_button_background</item>
        <item name="background">@color/color_states_primary_color_button_background</item>
    </style>

    <style name="MediumButton" parent="ImportantButton">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HighlightedMediumButton" parent="MediumButton">
        <item name="backgroundTint">@color/color_states_primary_color_button_background</item>
        <item name="background">@color/color_states_primary_color_button_background</item>
    </style>

    <style name="MediumButtonRoundEdge" parent="MediumButton">
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="SwipeButtonStyle">
        <item name="backgroundTint">@color/lightBackgroundColor</item>
        <item name="background">@color/lightBackgroundColor</item>
    </style>

    <style name="MultipleChoiceCardStyle">
        <item name="cardCornerRadius">25dp</item>
        <item name="strokeColor">@color/primaryHighlightColor</item>
    </style>

    <style name="EventOption">
        <item name="android:textSize">24sp</item>
        <item name="android:buttonTint">@color/primaryHighlightColor</item>
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogButtonPositive" parent="DialogButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DialogButtonNegative" parent="DialogButton">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="DialogWithTitle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="MainProgressBarStyle" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:colorAccent">@color/primaryHighlightColor</item>
    </style>

    <style name="ItemCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">25dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>