    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_myEvents">

    <fragment
        android:id="@+id/navigation_profile"
        android:name="hu.bme.aut.android.together.ui.home.HomeFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_myEvents"
        android:name="hu.bme.aut.android.together.ui.dashboard.DashboardFragment"
        android:label="@string/my_events"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="hu.bme.aut.android.together.ui.notifications.NotificationsFragment"
        android:label="@string/search_events"
